    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="505.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
            <children>
                <fx:define>
                    <Alert fx:id="informationBox" alertType="INFORMATION" title="Information..." />
